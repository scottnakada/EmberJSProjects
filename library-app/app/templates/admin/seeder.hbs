<h1>Seeder, our Data Center</h1>

<div class="row">
  <div class="col-md-2 col-md-offset-1">{{number-box title="Libraries" number=libraries.length}}</div>
  <div class="col-md-2">{{number-box title="Authors" number=authors.length}}</div>
  <div class="col-md-2">{{number-box title="Books" number=books.length}}</div>
  <div class="col-md-2">{{number-box title="Invitations" number=invitation.length}}</div>
  <div class="col-md-2">{{number-box title="Contacts" number=contact.length}}</div>
</div>

{{seeder-block
    sectionTitle='Libraries'
    counter=librariesCounter
    generateAction='generateLibraries'
    deleteAction='deleteLibraries'
    createReady=libDone
    deleteReady=libDelDone
}}

{{seeder-block
  sectionTitle='Authors with Books'
  counter=authorCounter
  generateAction='generateBooksAndAuthors'
  deleteAction='deleteBooksAndAuthors'
  createReady=authDone
  deleteReady=authDelDone
}}

{{seeder-block
  sectionTitle='Invitations'
  counter=invitationCounter
  generateAction='generateInvitation'
  deleteAction='deleteInvitation'
  createReady=invitationDone
  deleteReady=invitationDelDone
}}

{{seeder-block
  sectionTitle='Contacts'
  counter=contactCounter
  generateAction='generateContact'
  deleteAction='deleteContact'
  createReady=contactDone
  deleteReady=contactDelDone
}}